{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@helpers/*": ["helpers/*"],
      "@repositories/*": ["repositories/*"],
      "@filters/*": ["filters/*"],
      "@contexts/*": ["contexts/*"],
      "@lib/*": ["lib/*"],
      "@theme/*": ["theme/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "exclude": ["node_modules", "./test/"],
  "include": ["**/*.ts", "**/*.tsx"]
}
